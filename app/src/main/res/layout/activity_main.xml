<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <android.support.v7.widget.AppCompatSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AppCompatSeekBar_id"
        android:layout_margin="30dp"
        android:isScrollContainer="true"
        android:max="100"
        custom:theme="@style/SeekBarTheme"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AppCompatSeekBar_txt"
        android:text="@string/appcompatseekbar"
        android:textStyle="bold"
        android:layout_below="@+id/AppCompatSeekBar_id"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AppCompatSeekBar_value"
        android:text="@string/_0"
        android:layout_below="@+id/AppCompatSeekBar_id"
        android:layout_marginLeft="170dp"
        android:layout_marginStart="170dp"/>

    <!-- RangeBar dependency link.....
    https://github.com/oli107/material-range-bar -->

    <com.appyvet.materialrangebar.RangeBar
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/RangeBar1_id"
        android:layout_below="@+id/AppCompatSeekBar_txt"
        android:layout_margin="30dp"
        app:mrb_rangeBar="false"
        app:mrb_tickStart="1"
        app:mrb_tickEnd="20"
        app:mrb_tickInterval="1"
        app:mrb_pinRadius="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RangerBar1_txt"
        android:text="Range Bar :"
        android:textStyle="bold"
        android:layout_below="@+id/RangeBar1_id"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RangeBar1_value"
        android:text="@string/_0"
        android:layout_below="@+id/RangeBar1_id"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp"/>

    <!-- no 3  -->
    <com.appyvet.materialrangebar.RangeBar
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/RangeBar2_id"
        android:layout_below="@+id/RangeBar1_id"
        android:layout_margin="30dp"
        app:mrb_rangeBar="true"
        app:mrb_tickStart="10"
        app:mrb_tickEnd="20"
        app:mrb_tickInterval="1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RangerBar2_txt"
        android:text="Range Bar2 :"
        android:textStyle="bold"
        android:layout_below="@+id/RangeBar2_id"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RangeBar2_leftvalue"
        android:text="@string/_0"
        android:layout_below="@+id/RangeBar2_id"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RangeBar2_rightvalue"
        android:text="@string/_0"
        android:layout_below="@+id/RangeBar2_id"
        android:layout_marginLeft="160dp"
        android:layout_marginStart="160dp"/>

</RelativeLayout>